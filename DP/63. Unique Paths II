class Solution {
    public int ans(int i,int j,int[][] dp,int[][] obs){
        if(i==0 && j==0)
        return 1;
        if(dp[i][j]!=0)
        return dp[i][j];
        if(i==0 && j>0){
            if(obs[i][j] == 1) return 0;
            else dp[i][j] = ans(i,j-1,dp,obs);
        }
        else if(i>0 && j==0){
            if(obs[i][j] == 1) return 0;
            else dp[i][j] = ans(i-1,j,dp,obs);
        }
        else{
            if(obs[i][j] == 1) return 0;
            dp[i][j] = ans(i-1,j,dp,obs)+ans(i,j-1,dp,obs);
        }
        return dp[i][j];
    }
    public int uniquePathsWithObstacles(int[][] obstacleGrid) {
        int m = obstacleGrid.length;
        int n = obstacleGrid[0].length;
        if(m==1 && n==1){
            if(obstacleGrid[0][0] == 1) return 0;
        }
        if(obstacleGrid[0][0] == 1) 
        return 0;
        int[][] dp = new int[m][n];
        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++)
            dp[i][j] = 0;
        }
        return ans(m-1,n-1,dp,obstacleGrid);
    }
}
