class Solution {
    public int ans(int i,int j,int[][] dp,int[][] grid){
        if(i==0 && j==0)
        return grid[i][j];
        if(dp[i][j]!=0)
        return dp[i][j];
        if(i==0 && j>0){
            int a = grid[i][j]+ans(i,j-1,dp,grid);
            dp[i][j] = a;
        }
        else if(i>0 && j==0){
            int a = grid[i][j]+ans(i-1,j,dp,grid);
            dp[i][j] = a;
        }
        else{
            int a = grid[i][j]+ans(i-1,j,dp,grid);
            int b = grid[i][j]+ans(i,j-1,dp,grid);
            dp[i][j] = Math.min(a,b);
        }
        return dp[i][j];
    }
    public int minPathSum(int[][] grid) {
        int m = grid.length;
        int n = grid[0].length;
        int[][] dp = new int[m][n];
        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++)
            dp[i][j] = 0;
        }
        return ans(m-1,n-1,dp,grid);
    }
}
