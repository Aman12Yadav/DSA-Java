class Solution {
    public int maxProfit(int[] prices) {
        int n =prices.length;
        int p = 0,f=0,buy=prices[0];
        for(int i=1;i<n;i++){
            if(f==0){
                while(i<n && prices[i]<=prices[i-1]) i++;
                buy = prices[i-1];
                i--;
                f=1;
            }
            else{
                while(i<n && prices[i]>prices[i-1]) i++;
                p = p+prices[i-1]-buy;
                i--;
                f=0;
            }
        }
        return p;
    }
}
